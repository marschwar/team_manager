%h1= t(".headline", name: @team.name)
.row
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title= t('.jerseys', count: @jersey_count)
      %ul.list-group
        - @jerseys.each_pair do |size, jerseys|
          %li.list-group-item= "#{jerseys.count}x #{size}"

