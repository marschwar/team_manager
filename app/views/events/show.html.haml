%h1= t(".headline.#{@event.type.downcase}", date: format_date(@event.event_date))
%p.text-muted= @event.name if @event.name
.actions
  = link_to t('.actions.edit'), edit_team_event_path(@event.team, @event), class: 'btn btn-primary'
  = link_to t('.actions.back'), team_practices_path(@team), class: 'btn btn-default'
%br
.row
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title= t('.participants', count: @participants.count)
      %ul.list-group
        - @participants.each do |participation|
          %li.list-group-item= participation.player.full_name
  .col-md-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title= t('.non_participants', count: @non_participants.count)
      %ul.list-group
        - @non_participants.each do |participation|
          %li.list-group-item= participation.player.full_name

.actions
  = link_to t('.actions.edit'), edit_team_event_path(@event.team, @event), class: 'btn btn-primary'
  = link_to t('.actions.back'), team_practices_path(@team), class: 'btn btn-default'
