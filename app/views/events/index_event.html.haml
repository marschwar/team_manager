%h1= t('.header', team: @team.name)

%table
  %thead
    %tr
      %th Type
      %th Name
      %th Event date
      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.type
        %td= event.name
        %td= event.event_date
        %td= link_to 'Show', team_event_path(event.team, event)
        %td= link_to 'Edit', edit_team_event_path(event.team,event)
        %td= link_to 'Destroy',  [event.team, event], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Event', new_team_event_path(@current_team)
