%h1 Listing events

%table
  %thead
    %tr
      %th Type
      %th Name
      %th Event date
      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.type
        %td= event.name
        %td= event.event_date
        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

