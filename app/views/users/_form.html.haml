%h2= t('.headline', name: @user.common_name)
%p.text-muted= t('.subheadline')

= form_for @user, html: {class: 'form-horizontal'} do |f|
  .form-group{class: "#{'has-error' if @user.errors[:role].present?}"}
    = f.label :role, :class => 'control-label'
    .controls
      = f.text_field :role, :class => 'form-control', maxlength: 100
  .form-group.actions
    = submit_tag t("users.actions.save"), class: 'btn btn-primary'